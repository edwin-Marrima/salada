{
  "title": "--",
  "description": "----",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/edwin-Marrima/salada/terraform/provider",
  "type": "object",
  "properties": {
    "provider": {
      "type": "object",
      "properties": {
        "only_allow_listed": { "type": "string" },
        "allowed": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "source": { "type": "string" },
              "version": { "type": "string" },
              "configuration_parameters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {"type": ["string", "null"] },
                    "name": {"type": "string"}
                  },
                  "required": ["value","name"]
                }
              }
            },
            "required": ["name", "source", "version"]
          }
        }
      }
    }
  }
}