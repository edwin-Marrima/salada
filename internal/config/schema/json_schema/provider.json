{
  "title": "--",
  "description": "----",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/edwin-Marrima/salada/terraform/provider",
  "type": "object",
  "properties": {
    "provider": {
      "type": "object",
      "properties": {
        "allowed": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "source": { "type": "string" },
              "version": { "type": "string" },
              "configuration_parameters": {
                "type": "object",
                "properties": {
                  "access_key": {
                    "type": "object",
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "allowed": {"type": "boolean"}
                        }
                      },
                      {
                        "type": "object",
                        "properties": {
                          "value": {"type": "string"}
                        }
                      }
                    ]
                  }
                }
              }
            },
            "required": ["name", "source", "version"]
          }
        }
      }
    }
  }
}